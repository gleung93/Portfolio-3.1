<section class="{{class}}">
	<div class="container">
		{{#if role-title }}
		<div class="row">
			<div class="col-md-5">
				<h3>{{ about-title }}</h3>
				<p>{{ about-body }}</p>
			</div>
			<div class="col-md-5 col-md-offset-2">
				<h3>{{ role-title }}</h3>
				<p>{{ role-body }}</p>
			</div>
		</div>
		{{#if CTA}}
		<div class="read_case">
			<p class="text-center">{{ CTA }}</p>
			<img class="arrow-down center-block" src="assets/images/down_arrow.svg">
		<div>
		{{/if}}
		{{else}}
		<div class="row">
			<div class="col-md-6">
				<h3>{{ about-title }}</h3>
				<p>{{ about-body }}</p>
			</div>
		</div>
		{{/if}}
	</div>
</section>