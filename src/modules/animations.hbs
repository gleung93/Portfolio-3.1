<section>
	<div class="container">
		<div class="row margin-bottom-60">
			<div class="col-md-6">
				<h3>{{sub-heading}}</h3>
				<p>{{body}} </p>
			</div>
		</div>
		{{#each item}}
		{{#if landscape}}
		<div class="row margin-bottom-60">
			<div class="col-xs-12">
					<img src="assets/images/thermostat/iphone_4_landscape.png" class="center-block img-responsive">
					<img src="{{img-src}}" class="ui-gif-90">
			</div>
		</div>
		{{else}}
		<div class="row margin-bottom-60">
			<div class="col-xs-12">
					<img src="assets/images/thermostat/iphone_4.png" class="center-block img-responsive">
					<img src="{{img-src}}" class="ui-gif">
			</div>
		</div>
		{{/if}}
		{{/each}}
	</div>
</section>