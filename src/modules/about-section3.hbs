<section class="full-width-wrap white-bg no-padding padding-bottom-60">
	<div class="container">
		<div class="row margin-top-50">
			<div class="col-md-8 col-md-offset-2 col-sm-12 col-sm-offset-0 {{text-color}}" {{{ title-animation }}}>
				<h2 class="text-center">{{ section-title }}</h2>
				<p class="text-center">{{ sub-title }}</p>
			</div>
		</div>
		{{#if paragraph}}
		<div class="row">
			<div class="col-md-6 col-sm-11 col-xs-12 {{text-color}}">
				<h4>{{ paragraph-heading }}</h4>
				<p>{{ paragraph.body }}</p>
			</div>
		</div>
		{{/if}}
		<!--Write an each statement-->
		{{#each companies}}
		<div class="row energy-row" {{{ item-animation }}}>
			<div class="col-md-2">
				<img class="company-logo center-block" src="{{ logo }}">
			</div>
			<div class="col-md-6">
				<h3>{{ heading }}</h3>
				<p>{{ body }}</p>
				<button type="button" class="btn btn-primary"> {{ CTA }} <i class="fa fa-arrow-right"></i> </button>
			</div>
		</div>
		{{/each}}
		
	</div>
	{{#if gradient}}
	<div class="gradient"></div>
	{{/if}}
</section>
